import { z } from 'zod';
import { BaseTool } from '../base/BaseTool.js';
import { Tool, Tags } from '../base/ToolDecorators.js';
import { CallToolResult } from '@modelcontextprotocol/sdk/types.js';

/**
 * Input schema for add_package tool
 */
const AddPackageToolArgsSchema = z.object({
  packageIdentifier: z.string().optional().describe('Package identifier (e.g., "com.unity.cinemachine" or git URL)')
});

/**
 * AddPackage Tool
 * Adds a Unity package
 */
@Tool({
  name: 'add_package',
  description: 'Adds a Unity package',
  category: 'asset',
  version: '1.0.0'
})
@Tags(['unity', 'asset', 'package'])
export class AddPackageTool extends BaseTool {
  get name() {
    return 'add_package';
  }

  get description() {
    return 'Adds a Unity package';
  }

  get inputSchema() {
    return AddPackageToolArgsSchema;
  }

  get category() {
    return 'asset';
  }

  protected formatSuccessResponse(result: any): CallToolResult {
    return {
      content: [{
        type: 'text',
        text: `âœ… ${result.message || 'Operation completed successfully'}`
      }]
    };
  }
}
